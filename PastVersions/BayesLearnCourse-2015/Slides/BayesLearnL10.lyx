\end{align*}

\end_inset


\begin_inset Formula 
\[
p(\mathbf{y}|\theta)p(\theta)\approx p(\mathbf{y}|\hat{\theta})p(\hat{\theta})\exp\left[-\frac{1}{2}J_{\hat{\theta},\mathbf{y}}(\theta-\hat{\theta})^{2}\right]
\]

\end_inset


\begin_inset VSpace medskip
\end_inset


\end_layout

